<div class="container border-bottom border-dark pb-3 mb-5">
	<div class="d-flex align-items-center justify-content-between row">
		<h1 class="text-capitalize col-lg-6">{{@type.plural}}</h1>
		<div class="row col-lg-6">
			<div class="col-lg-9 d-flex justify-content-end">
				<div class="input-group">
				  <input type="text" class="border border-dark form-control" placeholder="Search within {{@type.plural}}">
				  <button class="btn btn-outline-dark" type="button"><FaIcon @icon="magnifying-glass" @prefix="fa-light" /></button>
				</div>
			</div>
			<div class="col-lg-3 d-flex justify-content-end">
				<button {{on 'click' (fn @editObject "")}} type="button" class="btn btn-dark fw-normal"><FaIcon @icon="plus" @prefix="fa-light" />&nbsp;New</button>
			</div>
		</div>
	</div>
</div>

<table class="table table-striped">
	{{yield}}
</table>